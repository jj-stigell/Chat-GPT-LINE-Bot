  "description": "LINE message app bot utilizing OpenAI API",
  "main": "",
  "scripts": {
    "clean": "rimraf ./build",
    "build": "npx tsc",
    "start": "node build/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "NODE_ENV=test jest --verbose --detectOpenHandles --coverage",
